= simple_form_for(@form) do |f|
  .inputs
    .well
      %h3 Apprentice Details
      = f.input :title,       input_html: { class: 'span2' }
      = f.input :first_name,  input_html: { class: 'span4' }
      = f.input :middle_name, input_html: { class: 'span4' }
      = f.input :surname,     input_html: { class: 'span4' }
      = f.input :gender,      as: :radio_buttons, collection: [['Male', 'M'] ,['Female', 'F']], item_wrapper_class: 'inline'
      = f.input :tyims_id,    as: :string, label: 'TYIMS ID'
      = f.input :date_of_birth,         as: :date_picker, label: 'DOB' do
        = f.input_field :date_of_birth, as: :date_picker, class: 'input_dob', wrapper: false

  .actions
    = f.button :submit, class: 'btn btn-primary', data: { disable_with: 'Processing...' }

